/* pages/taskList/task.wxss */
.top-navbar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px;
  background-color:#fff;
  height:40px;
  box-shadow:0 2px 10px #ccc;

}

.lt-arrow,.rt-arrow{
    position: absolute;
    top: 1rpx;
    width: 60rpx;
    height: 60rpx;
  padding-right: 0.6rem;
}
.lt-arrow image,.rt-arrow image{
    width: 40rpx;
    height: 40rpx;
}
.lt-arrow{
    left: -110rpx;
    /* transform: rotate(180deg); */
}
.rt-arrow{
    right: -100rpx;
}
.header{
    font-size: 0;
    padding: 0 24rpx;
}
.header>view{
    display: inline-block;
    width: 14.285%;
    color: #333;
    font-size: 30rpx;
    text-align: center;
    border-bottom: 1px solid #D0D0D0;
    padding: 39rpx 0;
}
.weekMark{
    position: relative;
}
.weekMark view{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 1px solid #22A7F6;
}
.date-box{
    font-size: 0;
    padding: 10rpx 0;
}
.date-box>view{
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #020202;
    font-size: 40rpx;
    text-align: center;
    vertical-align: middle;
    margin: 0;
    /* border: 0.5rpx solid #D0D0D0; */
    height:auto;
}
.year-box>view{
    width: 33.33%;
    position: relative;
    display: inline-block;
    color: #020202;
    font-size: 40rpx;
    text-align: center;
    vertical-align: middle;
    margin: 35rpx 0;
    height:auto;
}
.year-box{
   font-size: 0;
    padding: 10rpx 0;
}
.date-head{
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
}
.nowDay .date-head{
    width: 50rpx;
    border-radius: 50%;
    text-align: center;
    color: #fff;
    background-color: #22A7F6;
    margin: 0 auto;
    height:50rpx;
    line-height:50rpx;

}
.date-height{
    height: 115rpx;
    overflow:hidden;
    background-color:#ebe9e9;

}
.date-weight{
    font-size:16rpx;
    background-color: #11f3a8;
    border-radius:50px 0 0 50px; 
    height: 10rpx; 
    display: none;
    /* 绘制半圆 */
}
.showDetail{
    font-size:20rpx;
    background-color: #63a9f8;
    /* border-radius:50px 0 0 50px;  */
    height: 34rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    line-height:34rpx;

}
/* .nowDay .date-weight{
    color: #22A7F6;
} */
.one{
    position: absolute;
    bottom: 0;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: red;
}
.two{
    position: absolute;
    bottom: 30rpx;
    right: 5rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: blue;
}
.modal-detail{
  height:200px;
  overflow:auto;
}
.modal-content {
  display:flex;
  justify-content:center;
  align-items:center;
}
.modal-circle{
  width:10px;
  height:10px;
  border-radius:50%;
  background-color:rgb(110, 110, 110);
  margin-right:20px
}
.nowYear{
  color:#22A7F6 !important;
}
.chooseYear{
  width: 100%;
  /* height: 200px; */
  background-color:#fff;

}