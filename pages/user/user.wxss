/* pages/user/user.wxss */
@import '../index/index.wxss';

.user-order-title1{
  border-bottom: 1rpx solid #eee;
  padding: 8rpx 0;
  position: relative;
}
.avatar-btn{
  border: 0;
  
}
.fs-12{
  font-size: 28rpx;
  margin-right: 20rpx;
}
.login-out-btn {
  border: none;
  height: 88rpx;
  background: #F56C6C;
  color: #fff;
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  width: 90%;
}
.top-110{
  margin: 100rpx 0 30rpx 0; 
}
.setting-btn{
  border: 0;
  margin: 0;
}
.scroll-view-x{
  height: 45rpx;
  padding:20rpx 20rpx 0 20rpx;
}
.tab-navbar{
  display: flex;
  flex-direction: row;
  justify-content: space-start;
  align-items: center;
}
.tab-navbar view{
  margin:0 10rpx;
  font-size: 30rpx;  
}
.item.active{
  color:rgb(7, 148, 31);
  font-weight: bold;
  border-bottom: 1px solid rgb(7, 148, 31);
}
.sub-btn{
    background-color: #22A7F6 !important;
}
.project-content{
  display:flex;
  flex-direction: column;
  justify-content:flex-start;
  margin:0 10rpx;
  padding: 16rpx
}
.project-name{
  font-size: 26rpx;
  color:rgb(48, 48, 48);
  font-weight: bold;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #d1d1d1;
}
.card-content{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
}
.content-title{
  font-size: 26rpx;
  color: rgb(146, 146, 146);
  padding:16rpx 0;
}
.task-info{
  flex: 1;
  display:flex;
  flex-direction: column;
}
.task-info-text{
  font-size: 22rpx;
  color:rgb(114, 114, 114);
}
.no-text{
  margin-right:10rpx;
}
.no-project{
  font-size:18px;
  display:flex;
  justify-content:center;
  color:#ccc;
  margin-bottom: 60rpx;
}
.today{
  font-size:16px;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  text-align:center;  
  border-bottom:1px solid #ccc;
  padding:10px 16px;
  background-color:#fff;
  box-shadow:0 2px 10px #ccc;

}
.project{
  margin:10px 10px 0 10px;
  background-color: #fff;
  box-shadow:0 2px 10px #ccc;
}
.tag-role{
    font-size: 24rpx;
    color: #444444;
}