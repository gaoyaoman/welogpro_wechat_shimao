/*画廊*/
.gallery {    
  width:100%;
  margin: 0 auto;
  display: flex;    
  justify-content: flex-start;    
  flex-wrap: wrap;
  background-color: #fff;
}
/*每张图片所占容器*/
.item {    
  position: relative;    
  margin:10rpx 5rpx;
  width: 300rpx;
  height: 300rpx;
}
.item image{
  width: 100%;
  height: 100%;
}
/*add按钮*/
.item .addIcon{
  position:relative;
  width:300;
  height:300rpx;
  text-align:center;
  line-height:300rpx;
  font-size:26rpx;
  background: #f2f2f2;
  color: #555;
}
/*删除按钮*/
.delete {    
  position:absolute;
  width:100%;
  right:0;
  bottom:0;
  /* background:#ccc; */
  opacity:.3;
  /* height: 40rpx; */
  font-size:40rpx;
  font-weight:700;
  padding:0 8rpx 0 10rpx;
  color: red;
  text-align: center;
  background-color: #fff;
}
/* 提交按钮 */
.submit-btn{
  padding-bottom:20rpx;
}
.task-selected{
  font-size: 26rpx;
  line-height: 26rpx;
  font-weight: bolder;
}
